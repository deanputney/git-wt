#!/bin/bash
#
# hello-world post-worktree-add hook
#
# This is a simple example hook that demonstrates the post-worktree-add hook.
# Install this to .git/hooks/post-worktree-add to see it in action.
#
# INSTALLATION:
#   git wt install-hooks hello-world
#
# Or manually:
#   cp examples/hooks/hello-world-pre-worktree-add .git/hooks/pre-worktree-add
#   cp examples/hooks/hello-world-post-worktree-add .git/hooks/post-worktree-add
#   chmod +x .git/hooks/pre-worktree-add .git/hooks/post-worktree-add

echo "âœ¨ Hello from post-worktree-add hook!"
echo "   Successfully created worktree at: $GIT_WORKTREE_PATH"
echo "   All arguments: $*"
echo ""
echo "   Environment variables:"
echo "   - GIT_WORKTREE_PATH: $GIT_WORKTREE_PATH"
echo "   - GIT_BRANCH: ${GIT_BRANCH:-<not set>}"
echo "   - GIT_COMMITISH: ${GIT_COMMITISH:-<not set>}"

# Exit 0 to indicate success
exit 0
